        </div>  -->    
            <% posts.reverse().forEach(function(post) { %>
                <div class="post w-1/3 p-2 border-2 border-zinc-800 rounded-md bg-transparent bg-zinc-800 mb-5 border-1px">
                    <h3 class="text-blue-600 mb-3">@<%=  user.username%></h3>
                    <p class="tracking-tight"><%= post.content %></p>
                    <div class="flex gap-4 mt-5">
                        <a class="text-blue-600" href="/like/<%= post._id %>">Like</a>
                        <a class="text-zinc-500" href="/edit/<%= post._id %>">Edit</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
